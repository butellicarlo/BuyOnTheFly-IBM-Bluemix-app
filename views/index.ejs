					<form class="row" >
						<div class="form-group col-md-6">
							<input id="subject" name="name" type="text" placeholder="Your Name" class="form-control" />
						</div>
						<div class="form-group col-md-6">
							<input id="sender" name="mail" type="email" placeholder="Your Email" class="form-control" />
						</div>
						<div class="form-group col-md-12">
							<input id="msgType" name="subject" type="text" placeholder="Type of Request..." class="form-control" />
						</div>
						<div class="form-group col-md-12">
							<textarea id="content" name="message" class="form-control" rows="10" placeholder="Type the Message here"></textarea>
						</div>
						<div class="form-group col-md-12">
							<button id="send_email" class="btn btn-lg btn-primary">Send</button>
						</div>
						<span id="message"></span>
						<!-- <p id="demo"></p> -->
					</form>
