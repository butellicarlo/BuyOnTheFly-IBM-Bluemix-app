	<!-- Load custom js for theme -->
	<script type="text/javascript" src="js/init.js"></script>

	<script>
	window.onload = getCurrentLocation();
	
	$(document).ready(function(){
	    var from,sender,subject,text;
	    $("#send_email").click(function(){ 
	    	var name = document.getElementById("subject"); 
	    	if($("#subject").val() === ''){  
	    		name.style.backgroundColor = "red";
	    		$("#message").text("The field is required, please fill it in!");
	    		return false;
	    	} else {
	    		name.style.backgroundColor = "#f1f4f7";
	    		subject=$("#subject").val();
	    	}
	    	if($("#sender").val() === ''){  
	    		document.getElementById("sender").style.backgroundColor = "red";
	    		$("#message").text("The field is required, please fill it in!");
	    		return false;
	    	} else { 
	    		document.getElementById("sender").style.backgroundColor = "#f1f4f7";
	    		sender=$("#sender").val();
	    	}
	    	if($("#msgType").val() === ''){  
	    		document.getElementById("msgType").style.backgroundColor = "red";
	    		$("#message").text("The field is required, please fill it in!");
	    		return false;
	    	} else {
	    		document.getElementById("msgType").style.backgroundColor = "#f1f4f7";
	    		type=$("#msgType").val();
	    	}
	    	if($("#content").val() === ''){  
	    		document.getElementById("content").style.backgroundColor = "red";
	    		$("#message").text("The field is required, please fill it in!");
	    		return false;
	    	} else {
	    		document.getElementById("content").style.backgroundColor = "#f1f4f7";
	    		text=$("#content").val();
	    	}
	        $("#message").text("Sending E-mail...Please wait...");
	        $.get("/send",{
	        	sender:sender,
	        	subject:subject,
	        	type:type,
	        	text:text
	        	},function(data){
	        		if(data==="sent")
	        		{
	            		$("#message").text("Email has been sent. Please check inbox!");
	        		}
			});
	    });
	});
	</script>

